# MentorOS Environment Configuration

# ===== REQUIRED =====

# OpenAI API Key (for GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=sk-your-key-here

# OR use Anthropic (for Claude)
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# Database URL (PostgreSQL)
DATABASE_URL=postgresql://mentoros:password@localhost:5432/mentoros

# ===== OPTIONAL - Channels =====

# Telegram Bot (for reminders and check-ins)
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# WhatsApp via Twilio (optional)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=+14155238886

# WhatsApp via Meta Cloud API (optional)
META_APP_ID=your_app_id
META_APP_SECRET=your_app_secret
META_PHONE_NUMBER_ID=your_phone_number_id
META_ACCESS_TOKEN=your_access_token

# Email (fallback channel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@email.com
SMTP_PASSWORD=your_app_password_here

# ===== OPTIONAL - Admin =====

# Admin/Owner email
ADMIN_EMAIL=admin@example.com

# Session secret key (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_use_openssl_rand

# ===== OPTIONAL - Cost Governance =====

# Token budgets per user
DAILY_TOKEN_CAP=100000
WEEKLY_TOKEN_CAP=500000
MONTHLY_TOKEN_CAP=2000000

# Monthly budget cap per user (USD)
MONTHLY_BUDGET_USD=50

# Model routing strategy
MODEL_ROUTING=smart  # Options: smart, cheap, premium

# Cheap model (for reminders, formatting)
CHEAP_MODEL=gpt-3.5-turbo

# Strong model (for plan generation, complex Q&A)
STRONG_MODEL=gpt-4-turbo-preview

# ===== OPTIONAL - Exports =====

# Notion integration
NOTION_API_KEY=secret_your_notion_integration_key

# PDF generation
PDF_GENERATOR_SERVICE=local  # Options: local, cloudconvert

# ===== OPTIONAL - Storage =====

# Object storage for PDFs and certificates
STORAGE_PROVIDER=local  # Options: local, s3, r2, supabase
S3_BUCKET=mentoros-artifacts
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret

# ===== OPTIONAL - Deployment =====

# Environment
ENVIRONMENT=development  # Options: development, staging, production

# API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend URL (for CORS and webhooks)
FRONTEND_URL=http://localhost:3000

# ===== OPTIONAL - Observability =====

# Logging level
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===== OPTIONAL - Feature Flags =====

# Enable/disable channels
ENABLE_TELEGRAM=true
ENABLE_WHATSAPP=false
ENABLE_EMAIL=true

# Enable/disable features
ENABLE_ASSESSMENTS=true
ENABLE_CERTIFICATIONS=true
ENABLE_NOTION_EXPORT=true
ENABLE_PDF_EXPORT=true

# ===== OPTIONAL - Resources =====

# Resource registry path
RESOURCE_REGISTRY_PATH=resources/registry.yaml

# Certification catalog path
CERTIFICATION_CATALOG_PATH=resources/certification_catalog.yaml

# Link verification TTL (days)
VERIFICATION_TTL_DAYS=14
